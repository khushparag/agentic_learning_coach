# =============================================================================
# Frontend Environment Configuration
# =============================================================================
# Copy this file to .env.local and update the values as needed.
# Variables prefixed with VITE_ are exposed to the client-side code.
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL
VITE_API_BASE_URL=http://localhost:8000

# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:8000

# WebSocket base URL (alternative format)
VITE_WS_BASE_URL=ws://localhost:8000

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Environment (development, staging, production)
VITE_APP_ENV=development

# Application name and version
VITE_APP_NAME="Agentic Learning Coach"
VITE_APP_VERSION=1.0.0

# Enable debug mode (shows additional logging and dev tools)
VITE_DEBUG=true

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable specific features
VITE_FEATURE_SOCIAL_LEARNING=true
VITE_FEATURE_GAMIFICATION=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_REAL_TIME_UPDATES=true
VITE_FEATURE_CODE_SHARING=true
VITE_FEATURE_PEER_CHALLENGES=true
VITE_FEATURE_WEBSOCKET_RECONNECT=true
VITE_FEATURE_LIVE_COLLABORATION=true
VITE_FEATURE_REAL_TIME_LEADERBOARD=true

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking (production)
# VITE_SENTRY_DSN=your-sentry-dsn-here

# Google Analytics tracking ID (production)
# VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------
# Mock data for development (when backend is not available)
VITE_USE_MOCK_DATA=false

# Enable React Query devtools
VITE_ENABLE_QUERY_DEVTOOLS=true

# Enable Redux devtools
VITE_ENABLE_REDUX_DEVTOOLS=true

# Hot reload port (usually handled by Vite automatically)
# VITE_HMR_PORT=24678

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------
# API request timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Maximum file upload size (bytes)
VITE_MAX_FILE_SIZE=10485760

# Image optimization quality (0-100)
VITE_IMAGE_QUALITY=80

# -----------------------------------------------------------------------------
# UI Configuration
# -----------------------------------------------------------------------------
# Default theme (light, dark, system)
VITE_DEFAULT_THEME=system

# Enable animations
VITE_ENABLE_ANIMATIONS=true

# Default language/locale
VITE_DEFAULT_LOCALE=en-US

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Content Security Policy (CSP) nonce for inline scripts
# VITE_CSP_NONCE=random-nonce-value

# Allowed domains for external resources
VITE_ALLOWED_DOMAINS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Code Editor Configuration
# -----------------------------------------------------------------------------
# Monaco Editor CDN URL (for offline development)
# VITE_MONACO_CDN_URL=https://cdn.jsdelivr.net/npm/monaco-editor@0.44.0

# Default programming language for code editor
VITE_DEFAULT_LANGUAGE=javascript

# Enable code editor minimap
VITE_EDITOR_MINIMAP=false

# Code editor theme
VITE_EDITOR_THEME=vs-dark

# -----------------------------------------------------------------------------
# Learning Configuration
# -----------------------------------------------------------------------------
# Default session length (minutes)
VITE_DEFAULT_SESSION_LENGTH=60

# Maximum hint requests per exercise
VITE_MAX_HINTS_PER_EXERCISE=3

# Auto-save interval for code editor (milliseconds)
VITE_AUTOSAVE_INTERVAL=30000

# -----------------------------------------------------------------------------
# Gamification Configuration
# -----------------------------------------------------------------------------
# Enable XP animations
VITE_ENABLE_XP_ANIMATIONS=true

# Enable achievement notifications
VITE_ENABLE_ACHIEVEMENT_NOTIFICATIONS=true

# Streak reminder time (24-hour format)
VITE_STREAK_REMINDER_TIME=20:00

# -----------------------------------------------------------------------------
# Social Features Configuration
# -----------------------------------------------------------------------------
# Maximum solution sharing per day
VITE_MAX_SOLUTIONS_PER_DAY=10

# Maximum challenge requests per day
VITE_MAX_CHALLENGES_PER_DAY=5

# Study group member limit
VITE_MAX_STUDY_GROUP_MEMBERS=20