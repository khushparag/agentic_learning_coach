# =============================================================================
# NPM Configuration for Learning Coach Frontend
# =============================================================================
# Optimized settings for Docker builds and CI/CD
# =============================================================================

# Performance optimizations
cache-max=86400000
prefer-offline=true
audit=false
fund=false
update-notifier=false

# Security settings
audit-level=moderate

# Registry settings
registry=https://registry.npmjs.org/

# Package installation preferences
save-exact=true
package-lock=true

# Progress and logging
progress=false
loglevel=warn

# Node.js engine strict mode
engine-strict=true

# Optional dependencies handling
optional=false