# =============================================================================
# Docker Environment Configuration
# =============================================================================
# This file contains Docker-specific environment variables that are injected
# at runtime through the docker-entrypoint.sh script.
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration (Docker Internal)
# -----------------------------------------------------------------------------
# Backend API base URL (internal Docker network)
VITE_API_BASE_URL=http://coach-service:8000

# WebSocket URL for real-time updates (internal Docker network)
VITE_WS_URL=ws://coach-service:8000

# WebSocket base URL (alternative format)
VITE_WS_BASE_URL=ws://coach-service:8000

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Environment (production for Docker)
VITE_APP_ENV=production

# Application name and version
VITE_APP_NAME="Agentic Learning Coach"
VITE_APP_VERSION=1.0.0

# Disable debug mode in Docker
VITE_DEBUG=false

# -----------------------------------------------------------------------------
# Feature Flags (Production Defaults)
# -----------------------------------------------------------------------------
VITE_FEATURE_SOCIAL_LEARNING=true
VITE_FEATURE_GAMIFICATION=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_REAL_TIME_UPDATES=true
VITE_FEATURE_CODE_SHARING=true
VITE_FEATURE_PEER_CHALLENGES=true
VITE_FEATURE_WEBSOCKET_RECONNECT=true
VITE_FEATURE_LIVE_COLLABORATION=true
VITE_FEATURE_REAL_TIME_LEADERBOARD=true

# -----------------------------------------------------------------------------
# Performance Configuration (Production Optimized)
# -----------------------------------------------------------------------------
# API request timeout (milliseconds)
VITE_API_TIMEOUT=15000

# Maximum file upload size (bytes) - 5MB for production
VITE_MAX_FILE_SIZE=5242880

# Image optimization quality (0-100)
VITE_IMAGE_QUALITY=75

# -----------------------------------------------------------------------------
# UI Configuration
# -----------------------------------------------------------------------------
# Default theme
VITE_DEFAULT_THEME=system

# Enable animations
VITE_ENABLE_ANIMATIONS=true

# Default language/locale
VITE_DEFAULT_LOCALE=en-US

# -----------------------------------------------------------------------------
# Code Editor Configuration
# -----------------------------------------------------------------------------
# Default programming language for code editor
VITE_DEFAULT_LANGUAGE=javascript

# Disable code editor minimap for performance
VITE_EDITOR_MINIMAP=false

# Code editor theme
VITE_EDITOR_THEME=vs-dark

# -----------------------------------------------------------------------------
# Learning Configuration
# -----------------------------------------------------------------------------
# Default session length (minutes)
VITE_DEFAULT_SESSION_LENGTH=60

# Maximum hint requests per exercise
VITE_MAX_HINTS_PER_EXERCISE=3

# Auto-save interval for code editor (milliseconds)
VITE_AUTOSAVE_INTERVAL=30000

# -----------------------------------------------------------------------------
# Gamification Configuration
# -----------------------------------------------------------------------------
# Enable XP animations
VITE_ENABLE_XP_ANIMATIONS=true

# Enable achievement notifications
VITE_ENABLE_ACHIEVEMENT_NOTIFICATIONS=true

# Streak reminder time (24-hour format)
VITE_STREAK_REMINDER_TIME=20:00

# -----------------------------------------------------------------------------
# Social Features Configuration
# -----------------------------------------------------------------------------
# Maximum solution sharing per day
VITE_MAX_SOLUTIONS_PER_DAY=10

# Maximum challenge requests per day
VITE_MAX_CHALLENGES_PER_DAY=5

# Study group member limit
VITE_MAX_STUDY_GROUP_MEMBERS=20

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Allowed domains for external resources
VITE_ALLOWED_DOMAINS=localhost,127.0.0.1,coach-service

# -----------------------------------------------------------------------------
# Development Configuration (Disabled in Docker)
# -----------------------------------------------------------------------------
# Mock data for development
VITE_USE_MOCK_DATA=false

# Disable development tools in Docker
VITE_ENABLE_QUERY_DEVTOOLS=false
VITE_ENABLE_REDUX_DEVTOOLS=false