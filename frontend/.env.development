# =============================================================================
# Development Environment Configuration
# =============================================================================
# This file contains development-specific environment variables.
# It is automatically loaded when NODE_ENV=development or when running `npm run dev`.
# =============================================================================

# -----------------------------------------------------------------------------
# Development Server Configuration
# -----------------------------------------------------------------------------
# Development server port
VITE_DEV_PORT=3000

# Hot Module Replacement port
VITE_HMR_PORT=24678

# Auto-open browser on dev server start
VITE_AUTO_OPEN=true

# Use polling for file watching (useful in Docker/WSL)
VITE_USE_POLLING=false
VITE_POLLING_INTERVAL=1000

# -----------------------------------------------------------------------------
# API Configuration for Development
# -----------------------------------------------------------------------------
# Backend API base URL (use host.docker.internal for Docker development)
VITE_API_BASE_URL=http://localhost:8002

# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:8002

# API request timeout (longer for development debugging)
VITE_API_TIMEOUT=60000

# Enable mock API server
VITE_USE_MOCK_API=false
VITE_MOCK_API_PORT=3001

# -----------------------------------------------------------------------------
# Development Features
# -----------------------------------------------------------------------------
# Application environment
VITE_APP_ENV=development

# Enable debug mode (shows additional logging and dev tools)
VITE_DEBUG=true

# Enable development tools
VITE_ENABLE_QUERY_DEVTOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true

# Enable React strict mode
VITE_REACT_STRICT_MODE=true

# Enable performance monitoring in development
VITE_ENABLE_PERF_MONITOR=true

# -----------------------------------------------------------------------------
# Development Logging
# -----------------------------------------------------------------------------
# Log level (debug, info, warn, error)
VITE_LOG_LEVEL=debug

# Enable console logging
VITE_ENABLE_CONSOLE_LOGS=true

# Enable network request logging
VITE_LOG_API_REQUESTS=true

# Enable WebSocket logging
VITE_LOG_WEBSOCKET=true

# -----------------------------------------------------------------------------
# Development Performance Settings
# -----------------------------------------------------------------------------
# Larger file upload size for development
VITE_MAX_FILE_SIZE=20971520

# Higher image quality for development
VITE_IMAGE_QUALITY=90

# Disable service worker in development
VITE_ENABLE_SERVICE_WORKER=false

# Enable source maps
VITE_ENABLE_SOURCE_MAPS=true

# -----------------------------------------------------------------------------
# Development Feature Flags
# -----------------------------------------------------------------------------
# Enable all features in development
VITE_FEATURE_SOCIAL_LEARNING=true
VITE_FEATURE_GAMIFICATION=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_REAL_TIME_UPDATES=true
VITE_FEATURE_CODE_SHARING=true
VITE_FEATURE_PEER_CHALLENGES=true
VITE_FEATURE_WEBSOCKET_RECONNECT=true
VITE_FEATURE_LIVE_COLLABORATION=true
VITE_FEATURE_REAL_TIME_LEADERBOARD=true

# Development-only features
VITE_FEATURE_DEV_TOOLS=true
VITE_FEATURE_MOCK_DATA=true
VITE_FEATURE_ERROR_BOUNDARY_DEV=true

# -----------------------------------------------------------------------------
# Code Editor Development Settings
# -----------------------------------------------------------------------------
# Monaco Editor development settings
VITE_EDITOR_MINIMAP=true
VITE_EDITOR_THEME=vs-dark
VITE_EDITOR_FONT_SIZE=14
VITE_EDITOR_TAB_SIZE=2

# Enable code editor debugging
VITE_EDITOR_DEBUG=true

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------
# Enable test utilities in development
VITE_ENABLE_TEST_UTILS=true

# Mock data for testing
VITE_USE_MOCK_DATA=false

# Test database URL (if different from main)
# VITE_TEST_DB_URL=postgresql://test:test@localhost:5433/learning_coach_test

# -----------------------------------------------------------------------------
# Security Settings (Relaxed for Development)
# -----------------------------------------------------------------------------
# Allowed domains (more permissive in development)
VITE_ALLOWED_DOMAINS=localhost,127.0.0.1,0.0.0.0,host.docker.internal

# Disable HTTPS requirement in development
VITE_REQUIRE_HTTPS=false

# Enable CORS for development
VITE_ENABLE_CORS=true

# -----------------------------------------------------------------------------
# Analytics and Monitoring (Disabled in Development)
# -----------------------------------------------------------------------------
# Disable external analytics in development
VITE_ENABLE_ANALYTICS=false

# Disable error reporting in development
VITE_ENABLE_ERROR_REPORTING=false

# Disable performance tracking in development
VITE_ENABLE_PERFORMANCE_TRACKING=false