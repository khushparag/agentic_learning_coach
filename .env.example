# =============================================================================
# Agentic Learning Coach - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values as needed.
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_DB=learning_coach
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/learning_coach

# -----------------------------------------------------------------------------
# Redis Configuration (Caching & Sessions)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Qdrant Configuration (Vector Database)
# -----------------------------------------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_URL=http://localhost:6333

# -----------------------------------------------------------------------------
# Service Ports
# -----------------------------------------------------------------------------
COACH_PORT=8000
RUNNER_PORT=8001
FRONTEND_PORT=3000

# -----------------------------------------------------------------------------
# Runner Service Configuration
# -----------------------------------------------------------------------------
RUNNER_SERVICE_URL=http://localhost:8001
MAX_EXECUTION_TIME=10
MAX_MEMORY_MB=256
MAX_CODE_LENGTH=50000
ENABLE_NETWORK=false
ALLOWED_LANGUAGES=python,javascript,typescript

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=dev-secret-key-change-in-production

# Run database migrations on startup (true/false)
RUN_MIGRATIONS=true

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# LLM Configuration (AI-Powered Features) - REQUIRED FOR FULL FUNCTIONALITY
# -----------------------------------------------------------------------------
# The Agentic Learning Coach uses LLM for:
# - Personalized curriculum generation
# - Exercise creation with test cases
# - Code review and feedback
# - Concept explanations
# - Adaptive learning recommendations
#
# Without API keys, the system uses template-based fallbacks which provide
# basic functionality but lack the personalization and intelligence of LLM.
#
# Choose one provider: OpenAI or Anthropic

# OpenAI Configuration (Recommended for best results)
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY="Your Open API Key"
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (Alternative)
# Get your API key at: https://console.anthropic.com/
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-haiku-20240307

# LLM Settings
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=30

# -----------------------------------------------------------------------------
# Observability & Monitoring (Optional)
# -----------------------------------------------------------------------------
# SENTRY_DSN=your-sentry-dsn-here
# PROMETHEUS_ENABLED=false
# JAEGER_AGENT_HOST=localhost
# JAEGER_AGENT_PORT=6831

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_CODE_SUBMISSIONS_PER_MINUTE=10

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_ADAPTIVE_DIFFICULTY=true
FEATURE_RESOURCE_RECOMMENDATIONS=true
FEATURE_CODE_ANALYSIS=true

# -----------------------------------------------------------------------------
# Frontend Feature Flags
# -----------------------------------------------------------------------------
FEATURE_SOCIAL_LEARNING=true
FEATURE_GAMIFICATION=true
FEATURE_ANALYTICS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_CODE_SHARING=true
FEATURE_PEER_CHALLENGES=true
FEATURE_WEBSOCKET_RECONNECT=true
FEATURE_LIVE_COLLABORATION=true
FEATURE_REAL_TIME_LEADERBOARD=true

# -----------------------------------------------------------------------------
# Frontend Development Configuration
# -----------------------------------------------------------------------------
USE_MOCK_DATA=false
ENABLE_QUERY_DEVTOOLS=true
ENABLE_REDUX_DEVTOOLS=true

# -----------------------------------------------------------------------------
# Frontend Performance Configuration
# -----------------------------------------------------------------------------
API_TIMEOUT=30000
MAX_FILE_SIZE=10485760
IMAGE_QUALITY=80

# -----------------------------------------------------------------------------
# Frontend UI Configuration
# -----------------------------------------------------------------------------
DEFAULT_THEME=system
ENABLE_ANIMATIONS=true
DEFAULT_LOCALE=en-US

# -----------------------------------------------------------------------------
# Frontend Code Editor Configuration
# -----------------------------------------------------------------------------
DEFAULT_LANGUAGE=javascript
EDITOR_MINIMAP=false
EDITOR_THEME=vs-dark

# -----------------------------------------------------------------------------
# Frontend Learning Configuration
# -----------------------------------------------------------------------------
DEFAULT_SESSION_LENGTH=60
MAX_HINTS_PER_EXERCISE=3
AUTOSAVE_INTERVAL=30000

# -----------------------------------------------------------------------------
# Frontend Gamification Configuration
# -----------------------------------------------------------------------------
ENABLE_XP_ANIMATIONS=true
ENABLE_ACHIEVEMENT_NOTIFICATIONS=true
STREAK_REMINDER_TIME=20:00

# -----------------------------------------------------------------------------
# Frontend Social Features Configuration
# -----------------------------------------------------------------------------
MAX_SOLUTIONS_PER_DAY=10
MAX_CHALLENGES_PER_DAY=5
MAX_STUDY_GROUP_MEMBERS=20